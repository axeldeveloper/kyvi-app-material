#:import rgba kivy.utils.get_color_from_hex
#:import Snackbar kivymd.uix.snackbar.Snackbar

NavigationLayout:
    id: nav_layout
    ScreenManager:
        id: main_screen_manager
        Screen:
            id: main_screen_content
            BoxLayout:
                orientation:'vertical'
                MDToolbar:
                    title: app.title
                    elevation:10
                    left_action_items:[["menu", lambda x: nav_drawer.set_state()]]
                ScreenManager:
                    id: screen_manager                   
                    PincipalScreen:
                        id:principal
                        name:"principal"
                    DashBoard:
                        id:dashboard
                        name:"dashboard"
                    CategoriaScreem:
                        id:categoria_screen
                        name:"categoria_screen"
                    Registration:
                        id:registration
                        name:"registration"                   
                    #LoginForm:
                    #    id:loginform
                    #    name:"loginform"
                   
                    LoginScreen:
                        id:login
                        name:"login"                
                    #FormSnack:
                    #    id:formsnack
                    #    name: "formsnack"
                    #PanelImage:
                    #    id:panelimage
                    #    name: "panelimage"
                   
    MDNavigationDrawer:
        id: nav_drawer
        BoxLayout:
            orientation:'vertical'
            padding:"8dp"
            spacing:"8dp"
            Image:
                pos_hint:{"x":.24,"y":.0}
                size_hint: None, None
                size:dp(146), dp(158)
                source:"images/gnome.jpeg"  
            ScrollView:
                MDList:
                    OneLineIconListItem:
                        text:"Home"
                        on_release:
                            screen_manager.current = "principal"
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon:"dishwasher"                        
                    OneLineIconListItem:
                        text:"Dashboard"
                        on_release:
                            screen_manager.current = "dashboard"
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon:"dishwasher"
                    OneLineIconListItem:
                        text:"Categoria"
                        on_release:
                            screen_manager.current = "categoria_screen"
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon:"dishwasher"                
                    OneLineIconListItem:
                        text:"Registration"
                        on_release:
                            screen_manager.current = "registration"
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon:"dishwasher"

                    OneLineIconListItem:
                        text:"Login Form"
                        on_release:
                            screen_manager.current = "loginform"
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon:"dishwasher"

                    
                    OneLineIconListItem:
                        text:"Login"
                        on_release:
                            screen_manager.current = "login"
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon:"dishwasher" 
                    
                    OneLineIconListItem:
                        text:"FormSnack"
                        on_release:
                            screen_manager.current = "formsnack"
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon:"dishwasher"
                    OneLineIconListItem:
                        text:"PanelImage"
                        on_release:
                            screen_manager.current = "panelimage"
                            nav_drawer.set_state()
                        IconLeftWidget:
                            icon:"dishwasher"
#:include dashboard.kv
#:include principal_screem.kv
#:include form_categoria_screem.kv
#:include form_Registration.kv
#:include form_login_screem.kv

