<Registration>:
    # name: "registration"
    # id: registration  

    orientation: "vertical"
    # size_hint: 0.1, 1
    background_color:
    canvas.before:
        Color:
            # rgba: self.background_color
            rgba: app.theme_cls.primary_color
        Rectangle:
        #RoundedRectangle:
            # radius: [10]
            pos: self.pos
            size: self.size


    MDFloatLayout:
        MDCard:
            # size_hint: .45, .8
            #size_hint: dp(.45), dp(.8)
            size_hint: None, None
            size: dp(600), dp(450)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            #pos_hint:{"center_x": .5, "center_y": .5}
            Carousel:
                id: reg_carousel
                
                MDFloatLayout:                                    
                    MDTextField:
                        id: register_first
                        hint_text: "First Name"
                        pos_hint: {'center_x': .5, 'center_y': 0.55}
                        size_hint_x: .8
                        width: 300
                        required: True
                    
                    MDTextField:
                        id: register_last
                        hint_text: "Last Name"
                        pos_hint: {'center_x': .5, 'center_y': 0.45}
                        size_hint_x: .8
                        width: 300
                        required: True
                    
                    MDRaisedButton:
                        text: 'Next'
                        pos_hint: {'center_x': .675, 'center_y': 0.225}
                        on_release:
                            app.next_card()
                    
                    MDRectangleFlatButton:
                        text: 'Cancel'
                        pos_hint: {'center_x': .325, 'center_y': 0.225}
                        on_release:
                            # screen_manager.current = 'login'
                            ##self.parent.ids.screen_manager.current = 'login'
                            app.next_login()
                
                MDFloatLayout:                                    
                    MDTextField:
                        id: register_email
                        hint_text: "Email Address"
                        pos_hint: {'center_x': .5, 'center_y': 0.55}
                        size_hint_x: .8
                        width: 300
                        required: True                  
                    MDTextField:
                        id: register_number
                        hint_text: "Phone Number"
                        pos_hint: {'center_x': .5, 'center_y': 0.45}
                        size_hint_x: .8
                        width: 300
                        required: True
                    
                    MDRaisedButton:
                        text: 'Next'
                        pos_hint: {'center_x': .675, 'center_y': 0.225}
                        on_release:
                            app.next_card_one()
                    
                    MDRectangleFlatButton:
                        text: 'Previous'
                        pos_hint: {'center_x': .325, 'center_y': 0.225}
                        on_release:
                            app.previous_card()
                
                MDFloatLayout:                                    
                    MDTextField:
                        id: register_username
                        hint_text: "Username"
                        pos_hint: {'center_x': .5, 'center_y': 0.55}
                        size_hint_x: .8
                        width: 300
                        required: True
                    
                    MDTextField:
                        id: register_password
                        hint_text: "Password"
                        pos_hint: {'center_x': .5, 'center_y': 0.45}
                        size_hint_x: .8
                        width: 300
                        required: True
                    
                    MDTextField:
                        id: confirm_password
                        hint_text: "Confirm Password"
                        pos_hint: {'center_x': .5, 'center_y': 0.35}
                        size_hint_x: .8
                        width: 300
                        required: True
                    
                    MDRaisedButton:
                        text: 'Submit'
                        pos_hint: {'center_x': .675, 'center_y': 0.225}
                        on_release:
                            # app.SQLDatabase.insert_data()
                            # app.main_screen_manager.screen_manager.current = 'login'
                            # self.parent.parent.parent.parent.parent.ids.screen_manager.current = 'login'
                            self.parent.ids.screen_manager.current = 'login'
                    
                    MDRectangleFlatButton:
                        text: 'Previous'
                        pos_hint: {'center_x': .325, 'center_y': 0.225}
                        on_release:
                            app.previous_card_one()
                            
        MDLabel:
            text: "Registration"
            bold: True
            font_style: 'H3'
            pos_hint: {'center_x': .84, 'center_y': .8}
        
        MDProgressBar:
            id: progress_one
            size_hint_x: 0.08
            pos_hint: {'center_x': .43, 'center_y': .65}
        MDLabel:
            id: re_name_carousel
            text: "Name"
            pos_hint: {'center_x': .828, 'center_y': .7}
            font_style: "H6"
            theme_text_color: "Custom"
        MDIconButton:
            id: re_name_button
            icon: "numeric-1-circle"
            pos_hint: {'center_x': .36, 'center_y': .65}
            user_font_size: "35sp"
            theme_text_color: "Custom"
        
        MDProgressBar:
            id: progress_two
            size_hint_x: 0.08
            pos_hint: {'center_x': .57, 'center_y': .65}
        MDLabel:
            id: re_contact_carousel
            text: "Contact"
            pos_hint: {'center_x': .955, 'center_y': .7}
            font_style: "H6"
            theme_text_color: "Custom"
        MDIconButton:
            id: re_contact_button
            icon: "numeric-2-circle"
            pos_hint: {'center_x': .50, 'center_y': .65}
            user_font_size: "35sp"
            theme_text_color: "Custom"
        
        MDLabel:
            id: re_submit_carousel
            text: "Submit"
            pos_hint: {'center_x': 1.098, 'center_y': .7}
            font_style: "H6"
        MDIconButton:
            id: re_submit_button
            icon: "numeric-3-circle"
            pos_hint: {'center_x': .638, 'center_y': .65}
            user_font_size: "35sp"
            


